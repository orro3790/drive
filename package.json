{
	"name": "driver",
	"private": true,
	"version": "1.5.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:mobile": "node scripts/mobile/dev-mobile.mjs",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "husky",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest run",
		"test:integration:smoke": "cross-env INTEGRATION_TEST=1 vitest run -c vitest.integration.smoke.config.ts",
		"test:integration:full": "cross-env INTEGRATION_TEST=1 vitest run -c vitest.integration.config.ts",
		"nightly:cron-e2e": "cross-env NIGHTLY_CRON_E2E=1 vitest run -c vitest.cron-e2e.config.ts",
		"nightly:lifecycle-e2e": "cross-env NIGHTLY_LIFECYCLE_E2E=1 vitest run -c vitest.lifecycle-e2e.config.ts",
		"nightly:witness-ui": "cross-env NIGHTLY_WITNESS_UI=1 tsx scripts/nightly/witness-ui.ts",
		"nightly": "tsx scripts/nightly/orchestrate.ts",
		"test:e2e": "playwright test",
		"test:e2e:smoke": "playwright test --grep @smoke",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"validate": "pnpm lint && pnpm check",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"seed": "tsx scripts/seed.ts",
		"seed:staging": "tsx scripts/seed.ts --staging",
		"mobile:android:sync": "node scripts/mobile/cap-sync.mjs",
		"mobile:android:sync:dev": "node scripts/mobile/cap-sync.mjs dev",
		"mobile:android:sync:usb": "cross-env CAP_SERVER_URL=http://localhost:5173 node scripts/mobile/cap-sync.mjs",
		"mobile:android:sync:prod": "node scripts/mobile/cap-sync.mjs prod",
		"mobile:android:copy": "pnpm exec cap copy android",
		"mobile:android:open": "pnpm exec cap open android",
		"mobile:android:doctor": "pnpm exec cap doctor",
		"mobile:android:bundle:release": "node scripts/mobile/android-gradle.mjs bundleRelease",
		"mobile:android:apk:release": "node scripts/mobile/android-gradle.mjs assembleRelease",
		"mobile:screenshot": "node scripts/mobile/screenshot.mjs"
	},
	"devDependencies": {
		"@capacitor/assets": "^3.0.5",
		"@capacitor/cli": "^8.0.2",
		"@faker-js/faker": "^10.2.0",
		"@noble/hashes": "^2.0.1",
		"@playwright/test": "^1.58.1",
		"@sveltejs/adapter-vercel": "^6.3.1",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@types/pg": "^8.16.0",
		"@vitest/coverage-v8": "^4.0.18",
		"cross-env": "^10.1.0",
		"dotenv": "^17.2.3",
		"drizzle-kit": "^0.31.8",
		"eslint": "^9.39.2",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"nanoid": "^5.1.6",
		"pg": "^8.18.0",
		"pino-pretty": "^13.1.3",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"sharp": "^0.34.5",
		"svelte": "^5.48.2",
		"svelte-check": "^4.3.5",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vitest": "^4.0.18"
	},
	"lint-staged": {
		"*": "prettier --write --ignore-unknown"
	},
	"dependencies": {
		"@axiomhq/pino": "^1.4.0",
		"@better-auth/passkey": "^1.4.18",
		"@capacitor/android": "^8.0.2",
		"@capacitor/app": "^8.0.1",
		"@capacitor/core": "^8.0.2",
		"@capacitor/push-notifications": "^8.0.1",
		"@inlang/paraglide-js": "^2.10.0",
		"@neondatabase/serverless": "^1.0.2",
		"@tanstack/table-core": "^8.21.3",
		"better-auth": "^1.4.18",
		"date-fns": "^4.1.0",
		"date-fns-tz": "^3.2.0",
		"drizzle-orm": "^0.45.1",
		"firebase-admin": "^13.6.0",
		"pino": "^10.3.0",
		"zod": "^4.3.6"
	}
}
